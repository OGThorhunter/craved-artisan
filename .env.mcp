# MCP Environment Variables for Craved Artisan
# Copy these to your main .env file and fill in the actual values

# Database Configuration
POSTGRES_CONNECTION_STRING=postgresql://localhost:5432/craved_artisan

# GitHub Integration
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# Brave Search API
BRAVE_API_KEY=your_brave_api_key_here

# Stripe Integration (for future use)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Sentry Error Monitoring (for future use)
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project

# Notion Integration (for future use)
NOTION_API_KEY=your_notion_api_key

# Figma Design Integration (for future use)
FIGMA_ACCESS_TOKEN=your_figma_token

# Linear Project Management (for future use)
LINEAR_API_KEY=your_linear_api_key

# Google Analytics (for future use)
GOOGLE_ANALYTICS_PROPERTY_ID=your_ga_property_id
GOOGLE_APPLICATION_CREDENTIALS=path_to_google_credentials.json

# Facebook/Instagram Social Media (for future use)
FACEBOOK_ACCESS_TOKEN=your_facebook_token
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
INSTAGRAM_ACCESS_TOKEN=your_instagram_token
INSTAGRAM_APP_ID=your_instagram_app_id
