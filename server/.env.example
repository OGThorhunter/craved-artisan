# Database
DATABASE_URL="postgresql://username:password@localhost:5432/craved_artisan"

# Environment
NODE_ENV="development"

# Session
SESSION_SECRET="your-super-secret-session-key-at-least-32-characters-long"

# Redis Configuration (Optional - falls back to in-memory if not provided)
# Get free Redis from Upstash: https://upstash.com/
# Format: rediss://default:password@host:port
REDIS_URL="rediss://default:your_password_here@us1-example.upstash.io:6379"
# Optional: Custom cookie domain for production
COOKIE_DOMAIN=""

# Client URL (for CORS)
CLIENT_URL="http://localhost:3000"

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# Application URLs
BACKEND_URL="http://localhost:3001"
FRONTEND_URL="http://localhost:5173"

# Maintenance Mode Configuration
# Set to "true" to enable maintenance mode (overrides database setting)
MAINTENANCE_MODE="false"

# Beta Access Key
# Secure key that allows bypass of maintenance mode via ?beta=<key> URL parameter
BETA_ACCESS_KEY="your-secure-beta-access-key-here-make-it-long-and-random" 