# Production Environment Variables
# Set these in your Render dashboard

# Database (Neon or Render PostgreSQL)
DATABASE_URL="postgresql://user:pass@host.region.neon.tech/db?sslmode=require"

# Environment
NODE_ENV="production"

# Session (Generate strong random string)
SESSION_SECRET="GENERATE-STRONG-RANDOM-STRING-AT-LEAST-64-CHARS"

# Redis (REQUIRED for production - get from Upstash)
REDIS_URL="rediss://default:password@us1-xxxxx.upstash.io:6379"

# Cookie Domain (your production domain)
COOKIE_DOMAIN=".yourdomain.com"

# Client URLs
CLIENT_URL="https://your-frontend.onrender.com"
BACKEND_URL="https://your-api.onrender.com"
FRONTEND_URL="https://your-frontend.onrender.com"

# Stripe (Live Mode)
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
ENABLE_STRIPE_TAX="true"
PLATFORM_FEE_BPS="100"

# OAuth (Production)
GOOGLE_CLIENT_ID="your-production-google-client-id"
GOOGLE_CLIENT_SECRET="your-production-google-secret"
FACEBOOK_APP_ID="your-production-facebook-app-id"
FACEBOOK_APP_SECRET="your-production-facebook-secret"

# Sentry (Error Monitoring)
SENTRY_DSN="https://xxxxx@sentry.io/xxxxx"

# Maintenance Mode
MAINTENANCE_MODE="false"
BETA_ACCESS_KEY="GENERATE-SECURE-RANDOM-KEY"

