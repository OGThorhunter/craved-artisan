model ConfigSetting {
  id          String         @id @default(cuid())
  key         String         @unique
  value       Json // Flexible for strings, numbers, booleans, objects
  category    ConfigCategory
  description String?
  isPublic    Boolean        @default(false) // Can be exposed to client
  updatedBy   String?
  updatedAt   DateTime       @updatedAt
  createdAt   DateTime       @default(now())
  
  updater User? @relation("ConfigUpdater", fields: [updatedBy], references: [id])
  
  @@index([category])
  @@index([key])
}

enum ConfigCategory {
  PLATFORM_IDENTITY
  AUTH_SECURITY
  PAYMENTS_FEES
  NOTIFICATIONS
  AI_FEATURES
  INTEGRATIONS
  COMPLIANCE
  MAINTENANCE
}

model ComplianceDocument {
  id          String            @id @default(cuid())
  type        ComplianceDocType
  title       String
  fileUrl     String? // S3 URL or null if not uploaded
  fileName    String?
  fileSize    Int?
  version     String?
  uploadedBy  String?
  uploadedAt  DateTime?
  expiresAt   DateTime?
  metadata    Json?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  
  uploader User? @relation(fields: [uploadedBy], references: [id])
  
  @@index([type])
}

enum ComplianceDocType {
  TERMS_OF_SERVICE
  PRIVACY_POLICY
  REFUND_POLICY
  FOOD_COMPLIANCE
  W9_TEMPLATE
  INSURANCE_CERT
  ORGANIC_CERT
  BUSINESS_LICENSE
}
